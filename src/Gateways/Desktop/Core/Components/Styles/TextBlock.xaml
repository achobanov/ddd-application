<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Text-Heading" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16px"></Setter>
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>

    <Style x:Key="Text-Label" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14px"></Setter>
        <Setter Property="FontStyle" Value="Italic"></Setter>
    </Style>

    <Style x:Key="Text-Paragraph" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14px"></Setter>
    </Style>

    <Style x:Key="Text-Error" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14px"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

</ResourceDictionary>
