<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Wrapper" TargetType="StackPanel">
    </Style>

    <Style x:Key="Form" TargetType="StackPanel" BasedOn="{StaticResource Wrapper}">
    </Style>

    <Style x:Key="Navigation" TargetType="StackPanel" BasedOn="{StaticResource Wrapper}">
        <Setter Property="Orientation" Value="Horizontal" />
    </Style>

    <Style x:Key="Form-List" BasedOn="{StaticResource Wrapper}" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"></Setter>
    </Style>

</ResourceDictionary>
