<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Core.Components.Templates.ListItem"
                    xmlns:strings="clr-namespace:EnduranceJudge.Localization;assembly=EnduranceJudge.Localization">

    <DataTemplate DataType="{x:Type local:ListItemViewModel}">
        <DockPanel Style="{StaticResource List-Item}">
            <Button Style="{StaticResource Button}"
                    Content="{x:Static strings:DesktopStrings.UpdateButtonText}"
                    Command="{Binding Command}"
                    CommandParameter="{Binding Id}" />

            <TextBlock Style="{StaticResource Text-Paragraph}"
                       Text="{Binding Name}" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>
